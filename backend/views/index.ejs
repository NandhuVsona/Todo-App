<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TODO APP</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <link rel="stylesheet" href="index.css" />
  <link rel="stylesheet" href="mediaquery.css" />
  <body>
    <div class="container">
      <header>
        <h2>Tasks</h2>
        <div class="options">
          <div class="hamburger" data-user-Id="<%=user._id%>">
            <div class="account-icon"><%= user.userName.charAt(0)%></div>
          </div>
        </div>
      </header>
      <div class="add"><i class="fa-solid fa-plus"></i></div>
      <main class="main-content">
        <!-- Account Page -->
        <div class="account-page">
          <section class="top">
            <div class="profile">
              <img src="men.png" alt="" />
            </div>
            <article>
              <h2><%=user.userName%></h2>
              <p>Tasks Status</p>
            </article>
            <main class="main">
              <div class="total-tasks">
                <h3 class="total-count">0</h3>
                <small>Total</small>
              </div>
              <div class="stared-tasks">
                <h3 class="star-count">0</h3>
                <small>Stared</small>
              </div>
              <div class="done-tasks">
                <h3 class="done-count">0</h3>
                <small>Done</small>
              </div>
              <div class="pending-tasks">
                <h3 class="pending-count">0</h3>
                <small>Pending</small>
              </div>
            </main>
          </section>
          <section class="center">
            <div class="account-btns">
              <button class="close">Close</button>
            </div>
          </section>
          <section class="bottom">
            <ul>
              <li class="theme-btn">
                <p>Theme choice</p>
                <div class="switch-theme"></div>
              </li>
              <li data-user-Id="<%=user._id%>" class="delete-btn">
                <p>Delete my account</p>
                <div class="switch-delete"></div>
              </li>
              <li class="logout-btn">
                <p>Logout</p>
                <div class="switch-logout"></div>
              </li>
            </ul>
          </section>
          <footer>
            <em
              ><span class="copyright"></span> All &copy are reserved. app
              version 1.0.0
            </em>
          </footer>
        </div>
        <div class="todo-container">
          <section>
            <div class="day-1">Today</div>
            <ul>
              <% if (todos.todayTask.length != 0) { %> <%
              todos.todayTask.forEach(todo => { %>
              <li class="task <%=todo.completed%>" data-todo-Id="<%=todo._id%>">
                <section>
                  <input <%="todo.completed%" /> type="checkbox" />
                  <p class="todo-title"><%= todo.title %></p>
                </section>

                <div class="todo-operations">
                  <i class="fa-solid fa-pen-to-square edit-task"></i>
                  <i class="<%= todo.stared %> fa-star unstar"></i>
                </div>

                <div
                  class="delete"
                  data-user-Id="<%=user._id%>"
                  data-todo-Id="<%=todo._id%>"
                >
                  <i class="fa-regular fa-trash-can"></i>
                </div>
              </li>
              <% }); %> <% } %>
            </ul>
          </section>
          <!-- ----------------------------------------------------------- -->
          <section>
            <div class="day-2">Yesterday</div>
            <ul>
              <% if (todos.yesterdayTask.length != 0) { %> <%
              todos.yesterdayTask.forEach(todo => { %>
              <li class="task <%=todo.completed%>" data-todo-Id="<%=todo._id%>">
                <section>
                  <input <%="todo.completed%" /> type="checkbox" />
                  <p class="todo-title"><%= todo.title %></p>
                </section>

                <div class="todo-operations">
                  <i class="fa-solid fa-pen-to-square edit-task"></i>
                  <i class="<%= todo.stared %> fa-star unstar"></i>
                </div>

                <div
                  class="delete"
                  data-user-Id="<%=user._id%>"
                  data-todo-Id="<%=todo._id%>"
                >
                  <i class="fa-regular fa-trash-can"></i>
                </div>
              </li>
              <% }); %> <% } %>
            </ul>
          </section>
          <!-- ----------------------------------------------------------- -->
          <section>
            <div class="day-3">Day Before</div>
            <ul>
              <% if (todos.dayBeforeYesterday.length != 0) { %> <%
              todos.dayBeforeYesterday.forEach(todo => { %>
              <li class="task <%=todo.completed%>" data-todo-Id="<%=todo._id%>">
                <section>
                  <input <%="todo.completed%" /> type="checkbox" />
                  <p class="todo-title"><%= todo.title %></p>
                </section>

                <div class="todo-operations">
                  <i class="fa-solid fa-pen-to-square edit-task"></i>
                  <i class="<%= todo.stared %> fa-star unstar"></i>
                </div>

                <div
                  class="delete"
                  data-user-Id="<%=user._id%>"
                  data-todo-Id="<%=todo._id%>"
                >
                  <i class="fa-regular fa-trash-can"></i>
                </div>
              </li>
              <% }); %> <% } %>
            </ul>
          </section>
          <!-- ----------------------------------------------------------- -->
          <section>
            <div class="day-4">Older Tasks</div>
            <ul>
              <% if (todos.past.length != 0) { %> <% todos.past.forEach(todo =>
              { %>
              <li class="task <%=todo.completed%>" data-todo-Id="<%=todo._id%>">
                <section>
                  <input <%="todo.completed%" /> type="checkbox" />
                  <p class="todo-title"><%= todo.title %></p>
                </section>

                <div class="todo-operations">
                  <i class="fa-solid fa-pen-to-square edit-task"></i>
                  <i class="<%= todo.stared %> fa-star unstar"></i>
                </div>

                <div
                  class="delete"
                  data-user-Id="<%=user._id%>"
                  data-todo-Id="<%=todo._id%>"
                >
                  <i class="fa-regular fa-trash-can"></i>
                </div>
              </li>
              <% }); %> <% } %>
            </ul>
          </section>
          <section class="empty">
            <div class="img-container">
              <img src="empty.jpg" alt="" />
              <h4>Hey your list is empty !</h4>
            </div>
          </section>
        </div>
      </main>

      <!-- todo adding input box -->
      <div class="todo-box">
        <div class="input-box-header">
          <h3>Today Task</h3>
          <small class="today-date"></small>
        </div>

        <div class="input-box">
          <input
            autocomplete="off"
            maxlength="25"
            id="data"
            type="text"
            placeholder="Enter your task..."
          />
        </div>
        <div class="input-btns">
          <button class="discard">Discard</button>
          <button class="save" data-user-Id="<%=user._id%>">Save</button>
        </div>
      </div>

      <!-- edit todo box -->
      <div class="edit-box">
        <div class="edit-box-header">
          <h3>Edit Task</h3>
        </div>
        <div class="input-box">
          <input id="edited-data" type="text" />
        </div>
        <div class="input-btns">
          <button class="edit-discard">Discard</button>
          <button class="update">Update</button>
        </div>
      </div>
      <div class="success-tostal">
        <div class="tick-icon">
          <div class="bar-1"></div>
          <div class="bar-2"></div>
        </div>
        <div class="message-box">
          <p class="message">Success</p>
          <p class="text">Your changes has been saved</p>
        </div>
        <div class="success-line"></div>
      </div>
    </div>
    <script src="index.js"></script>
  </body>
</html>
